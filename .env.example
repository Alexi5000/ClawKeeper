# ClawKeeper Environment Configuration
# Copy to .env and set values. Do not commit .env.

# Database (PostgreSQL)
DATABASE_URL=postgresql://clawkeeper:clawkeeper_password@localhost:5432/clawkeeper

# DeepSeek API (AI Agent LLM)
DEEPSEEK_API_KEY=sk-f7d5d4c2243e45d089449be8ebc023bb
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Opik Observability (Open Source - Self-Hosted)
# Start Opik locally: git clone https://github.com/comet-ml/opik && cd opik && ./opik.sh
# Dashboard: http://localhost:5173
OPIK_BASE_URL=http://localhost:5173/api
OPIK_PROJECT_NAME=clawkeeper
OPIK_ENABLED=true

# Server
PORT=4004
LOG_LEVEL=info
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# External Integrations
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=

XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# Document AI (for OCR)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Dashboard URL
DASHBOARD_URL=http://localhost:5174

# Mode (dev or prod)
CLAWKEEPER_MODE=dev

# Clawdbot Gateway (dev mode only)
CLAWDBOT_GATEWAY_URL=http://localhost:18789
